// M6 Test 3: FizzBuzz - classify integers using if/else chains

fn fizzbuzz_classify(n: i32) i32 {
    var fizz_check: i32 = n % 3;
    var buzz_check: i32 = n % 5;
    
    if (fizz_check == 0) {
        if (buzz_check == 0) {
            return 3;
        } else {
            return 1;
        };
    } else {
        if (buzz_check == 0) {
            return 2;
        } else {
            return 0;
        };
    };
}

fn accumulate_result(classification: i32) i32 {
    if (classification == 3) {
        print("FizzBuzz");
        return 1;
    } else {
        if (classification == 1) {
            print("Fizz");
            return 2;
        } else {
            if (classification == 2) {
                print("Buzz");
                return 3;
            } else {
                print("Number");
                return 4;
            };
        };
    };
}

actor Main {
    fn main() {
        print("FizzBuzz 1-15");
        var count: i32 = 0;
        for count in 1, 16 {
            var classification: i32 = fizzbuzz_classify(count);
            var result: i32 = accumulate_result(classification);
        };
    }

    on start() {
        main();
    }
}
