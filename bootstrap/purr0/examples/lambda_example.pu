// lambda_example.pu - demonstrates simple, explicit lambdas

func apply_to_three(f: (i32): i32) -> i32 {
  return f(3);
}

func main() -> i32 {
  // assign a lambda to a local binding
  let inc = (x: i32): i32 => x + 1;

  // call the lambda via the binding
  let r: i32 = inc(41); // expect 42

  // pass a lambda inline as an argument
  let s: i32 = apply_to_three((y: i32): i32 => y * 2);

  return r + s; // 42 + 6 = 48
}
